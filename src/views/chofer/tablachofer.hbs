<center><h1>Registro DATA de Choferes</h1></center>
<div class="container p-4">
    <div class="row">
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">CI</th>
      <th scope="col">Nombre</th>
      <th scope="col">Apellido</th>
      <th scope="col">Sexo</th>
      <th scope="col">Edad</th>

    </tr>
  </thead>
  <tbody>

    {{#each chofer}}
    <tr>
      <td>{{ci_chofer}}</td>
      <td>{{nombre}}</td>
      <td>{{apellido}}</td>
      <td>{{sexo}}</td>
      <td>{{edad}}</td>
    </tr>
    {{/each}}
     </tbody>
</table>
</div>
</div>