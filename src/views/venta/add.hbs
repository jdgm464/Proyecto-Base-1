<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/venta/addventa" method="POST">
                        <div class="form-group">
                            <input type="text" name="ci_cliente" class="form-control" placeholder="CI Cliente" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="ci_empleado" class="form-control" placeholder="CI Empleado">
                        </div>
                        <div class="form-group">
                            <input type="text" name="id_ruta" class="form-control" placeholder="ID Ruta">
                        </div>
                        <p>Fecha de salida: </p><div class="form-group">
                            <input type="date" name="fecha_salida">
                        </div>
                         <p>Fecha de venta: </p><div class="form-group">
                            <input type="date" name="fecha_venta">
                        </div>
                         <div class="form-group">
                            <input type="text" name="puesto_asignado" class="form-control" placeholder="Puesto Asignado">
                        </div>
                         <div class="form-group">
                            <input type="text" name="numero_unidad" class="form-control" placeholder="Nro de Unidad">
                        </div>
                        <div class="form-group">
                        <p>Elige metodo de pago</p>
                        <p><input type="radio" name="metodo_pago" value="Efectivo"/> Efectivo </p>
                        <p><input type="radio" name="metodo_pago" value="Debito"/> Debito </p>
                        <p><input type="radio" name="metodo_pago" value="Transferencia"/> Transferencia </p>
                        </div>
                        <div class="form-group">
                            <input type="text" name="nr_recibo" class="form-control" placeholder="Numero-Recibo">
                        </div>
                            <div class="form-group">
                            <input type="text" name="nr_vaucher" class="form-control" placeholder="Numero Vaucher" >
                        </div> 
                        <div class="form-group">
                            <input type="text" name="entidad_bancaria" class="form-control" placeholder="Entidad Bancaria">
                        </div>          
                        <div class="form-group">
                        <p>Moneda de pago</p>
                        <p><input type="radio" name="moneda" value="Dolares"/> Dolares </p>
                        <p><input type="radio" name="moneda" value="Bolivares"/> Bolivares </p>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Siguiente
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>