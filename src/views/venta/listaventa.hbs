<div class="container p-4">
    <div class="row">
<table class="table table-bordered">
  <thead class="thead-dark">
   
    <tr>
      <th scope="col">ID Venta</th>
      <th scope="col">CI Cliente</th>
      <th scope="col">CI Empleado</th>
      <th scope="col">ID Ruta</th>
      <th scope="col">Fecha Salida</th>
      <th scope="col">Fecha Venta</th>
      <th scope="col">Tasa Salida</th>
      <th scope="col">IVA Dolares</th>
      <th scope="col">Puesto Asignado</th>
      <th scope="col">Numero de Unidad</th>
      <th scope="col">Metodo de Pago</th>
      <th scope="col">Tasa Salida Bs</th>
      <th scope="col">IVA Bolivares</th>
      <th scope="col">Nr Recibo</th>
      <th scope="col">Nr Vaucher</th>
      <th scope="col">Entidad Bancaria</th>
      <th scope="col">Precio</th>
      <th scope="col">Precio Bolivares</th>
      <th scope="col">Moneda</th>
