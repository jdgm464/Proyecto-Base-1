  </thead>
  <tbody>

    {{#each venta}}
    <tr>
      <td>{{idventa}}</td>
      <td>{{ci_cliente}}</td>
      <td>{{ci_empleado}}</td>
      <td>{{id_ruta}}</td>
      <td>{{fecha_salida}}</td>
      <td>{{fecha_venta}}</td>
      <td>{{tasa_salida}}</td>
      <td>{{iva}}</td>
      <td>{{puesto_asignado}}</td>
      <td>{{numero_unidad}}</td>
      <td>{{metodo_pago}}</td>
      <td>{{tasa_salidabf}}</td>
      <td>{{iva_bolivares}}</td>
      <td>{{nr_recibo}}</td>
      <td>{{nr_vaucher}}</td>
      <td>{{entidad_bancaria}}</td>
      <td>{{precio}}</td>
      <td>{{precio_bolivares}}</td>
      <td>{{moneda}}</td>
